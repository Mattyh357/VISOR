<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Visor" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/black</item>

        <!--        text? on buttons -->
        <item name="colorOnPrimary">@color/white</item>

        <!--    background    -->
        <item name="android:windowBackground">@color/gray_dark</item>

        <!-- checkbox / loader / etc color. -->
        <item name="colorSecondary">@color/white</item>


        <!-- Status bar color. -->
        <!--        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>-->

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Cards -->
        <item name="cardViewStyle">@style/Theme.Visor.Cardview</item>

        <!-- Text -->
        <item name="android:textColor">@color/white</item>

        <!--   Dunno     -->

        <item name="colorSecondaryVariant">@color/wifi_1</item>
        <item name="colorOnSecondary">@color/wifi_2</item>

    </style>


    <!-- CardView -->
    <style name="Theme.Visor.Cardview" parent="CardView">
        <item name="cardBackgroundColor">@color/gray_medium</item>
    </style>


</resources>

